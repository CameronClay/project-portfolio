{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "name": "Debug Client Brave",
            "runtimeExecutable": "/usr/bin/brave-browser",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/my-portfolio"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/my-portfolio",
            "port": 3000
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/my-portfolio",
            "command": "npm run dev"
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "cwd": "${workspaceFolder}/my-portfolio",
            "url": "http://localhost:3000"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest: current file",
            "cwd": "${workspaceFolder}/my-portfolio",
            "program": "${workspaceFolder}/my-portfolio/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "${workspaceFolder}/my-portfolio/jest.config.js",
                "--detectOpenHandles",
                "-runInBand",
                "--passWithNoTests"
            ],
            "console": "integratedTerminal",
            "windows": {
                "program": "${workspaceFolder}/my-portfolio/node_modules/jest/bin/jest"
            }
        }
    ]
}