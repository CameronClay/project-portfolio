    // ],
    "include": [
        // "./src/middleware.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        // "**/src/*.ts",
        // "**/src/*.tsx",
        // "**/src/*.js",
        // "**/src/*.jsx",
        // "./**/*.ts",
        // "./**/*.tsx",
